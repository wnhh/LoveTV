<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--精彩推荐的title-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <View
        android:id="@+id/red_view"
        android:layout_width="5dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:background="@color/colorRed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="精彩推荐"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@id/red_view"/>

        <ImageView
            android:id="@+id/iv_chouchou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chouchou"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/tv_chouchou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瞅瞅"
            android:textColor="@color/chouchou_selector"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_chouchou"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>



</LinearLayout>
