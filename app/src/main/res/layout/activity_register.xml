<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_register"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6FCFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar
        android:id="@+id/register_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:navigationIcon="@mipmap/back_gray"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="23sp"
            android:text="手机注册"
            android:textColor="#000000"
            />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_margin="10dp"
        android:background="@drawable/grid_tiyantwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yztc.lovetv.myutil.CountDownButton
            android:id="@+id/yanzhengma_btn"
            android:layout_marginTop="10dp"
            android:layout_marginRight="3dp"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_shape"
            android:layout_centerVertical="true"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            />
        <EditText
            android:id="@+id/phone_edt"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="请输入手机号"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/grid_tiyantwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/yanzhengma_edt"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:inputType="number"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="请输入验证码"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_margin="10dp"
    android:background="@drawable/grid_tiyantwo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/name_edt"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="45dp"
        android:background="@null"
        android:hint="昵称"
        />
</LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/grid_tiyantwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/pwd_edt"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="45dp"
            android:background="@null"
            android:hint="请输入密码"
            />
    </LinearLayout>
    <Button
        android:id="@+id/register_id"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:background="@drawable/register_btn"
        />
</LinearLayout>
