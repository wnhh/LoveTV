<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/tuijian_vp"
        app:rollviewpager_play_delay="3000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        app:rollviewpager_hint_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:rollviewpager_hint_paddingRight="@dimen/dp_10"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:layout_alignBottom="@id/tuijian_vp"
        android:text="@string/bushifangguan"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/abc_textfield_activated_mtrl_alpha"/>

</RelativeLayout>
