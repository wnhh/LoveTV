<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/chat_from_createDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09-01 18:30"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_5"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/dp_50">

        <ImageView
            android:id="@+id/chat_from_icon"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@mipmap/compony_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/chat_from_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机器人"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/chat_from_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:background="@drawable/sobot_chatfrom_bg_normal"
                android:text="有大吗。。。"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:focusable="true"
                android:clickable="true"
                android:lineSpacingExtra="2dp"
                />
        </LinearLayout>
        

    </LinearLayout>

</LinearLayout>