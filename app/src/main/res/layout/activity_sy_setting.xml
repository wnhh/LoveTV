<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_sy_setting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.yztc.lovetv.activity.mine.SySettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/setback_iv"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_backstate"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="系统设置"
            android:textSize="19sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorWhite">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="非wifi下播放提醒"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/setswitch_iv"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@mipmap/close"
            android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/colorfont"/>

    <RelativeLayout
        android:id="@+id/cash_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:addStatesFromChildren="true"
        android:clickable="true"
        android:background="@color/colorWhite">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="清理缓存"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/cash_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="0.2M"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/aboutus_rl"
        android:addStatesFromChildren="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorWhite">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="关于我们"
            android:drawableRight="@mipmap/more"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/colorfont"/>

    <RelativeLayout
        android:id="@+id/pingfen_rl"
        android:addStatesFromChildren="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorWhite">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="给我们评分"
            android:drawableRight="@mipmap/more"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
</LinearLayout>
