<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <!--视频截图-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_95">
    <ImageView
        android:id="@+id/tuijian_iv_all"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:layout_margin="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_2"
            app:cardBackgroundColor="#55000000"
            android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tuijian_all_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222"
                    android:drawableLeft="@mipmap/show_play_small"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="@dimen/dp_5" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <!--头像 名字 简介-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/tuijian_iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tuijian_tv_name"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tuijian_iv_icon"
            android:layout_toRightOf="@id/tuijian_iv_icon"
            android:text="MJR·"
            android:layout_margin="@dimen/dp_4"
            android:textColor="#000000"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tuijian_tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_4"
            android:text="来来来"
            android:singleLine="true"
            android:gravity="bottom"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tuijian_iv_icon"
            android:layout_alignBottom="@id/tuijian_iv_icon"
            android:layout_below="@id/name_tv"
            android:textColor="@color/colorfont"
            android:textSize="11sp"/>
    </RelativeLayout>
</LinearLayout>
