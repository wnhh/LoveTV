<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/myattention_fl"
             tools:context="com.yztc.lovetv.fragment.other.MyAttentionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--基础任务的title-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:background="@color/colorWhite"
        android:layout_height="280dp">

        <View
            android:layout_marginTop="15dp"
            android:id="@+id/red_view"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:background="@color/colorRed"/>

        <TextView
            android:id="@+id/perfitpro_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="基础任务"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@id/red_view"/>
        <View
            android:id="@+id/fengeline"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/red_view"
            android:background="#9e9e9e">
        </View>
        <LinearLayout
            android:layout_below="@id/fengeline"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:id="@+id/RegisterJL_rl"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:id="@+id/zzregister_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/register"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/zzregistername_tv"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/zzregister_iv"
                    android:layout_toRightOf="@id/zzregister_iv"
                    android:text="注册奖励"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送125种子"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/zzregister_iv"
                    android:layout_alignBottom="@id/zzregister_iv"
                    android:layout_below="@id/zzregistername_tv"
                    android:textColor="@color/colorfont"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/registerJL_tv"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:text="未领取"
                    android:gravity="center"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp"
                    android:background="@drawable/grid_tiyanthree"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanfour"
                    android:text="未完成"
                    android:visibility="gone"
                    android:textColor="@color/questionchooseBlue"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/red_view"
                android:background="#9e9e9e">
            </View>
            <RelativeLayout
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="0dp">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/zz_phone_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/phone"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/zzphonename_tv"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/zz_phone_iv"
                    android:layout_toRightOf="@id/zz_phone_iv"
                    android:text="手机绑定奖励"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/zzphone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送125种子"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/zz_phone_iv"
                    android:layout_alignBottom="@id/zz_phone_iv"
                    android:layout_below="@id/zzphonename_tv"
                    android:textColor="@color/colorfont"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanthree"
                    android:text="未领取"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanfour"
                    android:text="未完成"
                    android:textColor="@color/questionchooseBlue"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/red_view"
                android:background="#9e9e9e">
            </View>
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/zz_email_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/email"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/zzemailname_tv"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/zz_email_iv"
                    android:layout_toRightOf="@id/zz_email_iv"
                    android:text="邮箱绑定奖励·"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送75种子"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/zz_email_iv"
                    android:layout_alignBottom="@id/zz_email_iv"
                    android:layout_below="@id/zzemailname_tv"
                    android:textColor="@color/colorfont"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanthree"
                    android:text="未领取"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanfour"
                    android:text="未完成"
                    android:textColor="@color/questionchooseBlue"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/red_view"
                android:background="#9e9e9e">
            </View>
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="0dp">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/rtouxiang_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/camera"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/name_tv"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/rtouxiang_iv"
                    android:layout_toRightOf="@id/rtouxiang_iv"
                    android:text="上传头像"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送75种子"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/rtouxiang_iv"
                    android:layout_alignBottom="@id/rtouxiang_iv"
                    android:layout_below="@id/name_tv"
                    android:textColor="@color/colorfont"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/tv_attention_weilingqu"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanthree"
                    android:text="未领取"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_attention_weiwancheng"
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanfour"
                    android:text="未完成"
                    android:textColor="@color/questionchooseBlue"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:background="@color/colorWhite"
            android:layout_height="180dp">

        <View
            android:layout_marginTop="15dp"
            android:id="@+id/twicered_view"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:background="@color/colorRed"/>

        <TextView
            android:id="@+id/rctask_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="日常任务"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@id/twicered_view"/>
        <View
            android:id="@+id/fengelinetwo"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/twicered_view"
            android:background="#9e9e9e">
        </View>
            <LinearLayout
                android:layout_below="@id/fengelinetwo"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/present_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/gift"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/present_tv"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/present_iv"
                    android:layout_toRightOf="@id/present_iv"
                    android:text="送礼物啦·"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每天第一次送礼物可以获得额外25种子"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/present_iv"
                    android:layout_alignBottom="@id/present_iv"
                    android:layout_below="@id/present_tv"
                    android:textColor="@color/colorfont"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanthree"
                    android:text="未领取"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanfour"
                    android:text="未完成"
                    android:textColor="@color/questionchooseBlue"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/red_view"
                android:background="#9e9e9e">
            </View>
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="0dp">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/danmu_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/danmu"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每天第一次发弹幕可以获得额外25种子"
                    android:singleLine="true"
                    android:gravity="bottom"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/danmu_iv"
                    android:layout_alignBottom="@id/danmu_iv"
                    android:layout_below="@id/danmu_iv"
                    android:textColor="@color/colorfont"
                    android:textSize="11sp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanthree"
                    android:text="未领取"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:background="@drawable/grid_tiyanfour"
                    android:text="未完成"
                    android:textColor="@color/questionchooseBlue"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/danmu_tv"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送弹幕"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_alignTop="@+id/danmu_iv"
                    android:layout_toRightOf="@+id/danmu_iv"
                    android:layout_toEndOf="@+id/danmu_iv"/>
            </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>
</FrameLayout>
