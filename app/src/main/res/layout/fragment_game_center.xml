<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.yztc.lovetv.fragment.other.GameCenterFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/centergameone_iv"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="12dp"
                android:id="@+id/gamename_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/infoone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gamename_tv"
                android:layout_alignLeft="@id/gamename_tv"
                android:text="456"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/download_tv"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="下载"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/grid_tiyanthree"
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/centergametwo_iv"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="12dp"
                android:id="@+id/gamenametwo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/infotwo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gamenametwo_tv"
                android:layout_alignLeft="@id/gamenametwo_tv"
                android:text="456"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/downloadtwo_tv"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="下载"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/grid_tiyanthree"
                android:textColor="@color/colorRed"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
